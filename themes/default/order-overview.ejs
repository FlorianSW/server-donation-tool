<%- include('partials/header.ejs') %>
<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">
                    <%= translate('STATISTICS_TITLE', {params: {startOfMonth: data.startOfMonth.toLocaleDateString(), endOfMonth: data.endOfMonth.toLocaleDateString()}}) %>
                </span>
                <div>
                    <%= translate('STATISTICS_TOTAL_DONATIONS', {params: {donations: data.totalOrders}}) %>
                </div>
                <div>
                    <%= translate('STATISTICS_TOTAL_REVENUE', {params: {revenue: data.totalRevenue.toFixed(2), currency: data.currency}}) %>
                </div>
                <div>
                    <%= translate('STATISTICS_TOTAL_VAT', {params: {vat: data.totalVat.toFixed(2), currency: data.currency}}) %>
                </div>

                <h5>
                    <%= translate('STATISTICS_VAT_BY_COUNTRY') %>
                </h5>
                <table>
                    <thead>
                        <tr>
                            <th>
                                <%= translate('STATISTICS_VAT_BY_COUNTRY_COUNTRY_CODE') %>
                            </th>
                            <th>
                                <%= translate('STATISTICS_VAT_BY_COUNTRY_VAT') %>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    <% Object.entries(data.vatByCountry).forEach(function (e) {%>
                        <tr>
                            <td>
                                <%= e[0] %>
                            </td>
                            <td>
                                <%= data.currency %> <%= e[1].toFixed(2) %>
                            </td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs') %>
