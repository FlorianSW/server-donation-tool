<%- include('partials/header.ejs') %>
<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <div>
                    Total Orders: <%= data.totalOrders %>
                </div>
                <div>
                    Total Revenue: <%= data.totalRevenue.toFixed(2) %>
                </div>
                <div>
                    Total VAT: <%= data.totalVat.toFixed(2) %>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>
                                Country Code
                            </th>
                            <th>
                                VAT
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    <% Object.entries(data.vatByCountry).forEach(function (e) {%>
                        <tr>
                            <td>
                                <%= e[0] %>
                            </td>
                            <td>
                                <%= e[1].toFixed(2) %>
                            </td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs') %>
