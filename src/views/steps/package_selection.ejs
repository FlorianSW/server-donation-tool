<form action="/selectPackage" method="post">
    <div class="col s12 m6 l9">
        <div class="card package">
            <div class="card-content">
                <span class="card-title"><%= translate('PERK_SELECTION_TITLE') %></span>
                <ul class="collection">
                    <% availablePackages.forEach(function (pack, index) { %>
                        <li class="collection-item">
                            <label>
                                <input class="with-gap" type="radio" name="package" value="<%= pack.id %>"
                                       <% if (index === 0) { %>checked
                                        <% } %>
                                >
                                <span><%= pack.name %> (<%= pack.price.currency %> <%= pack.price.amount %>)</span>
                                <div class="perks">
                                    <%= translate('PERK_INCLUDED') %>
                                    <% pack.perks.forEach(function (p) { %>
                                        <span><%= perkToString(p) %></span>
                                    <% }); %>
                                </div>
                            </label>
                        </li>
                    <% }); %>
                </ul>
                <% if (availablePackages.length === 0) { %>
                    <%= translate('PERK_NO_AVAILABLE') %>
                <% } %>
            </div>
            <div class="card-action">
                <button class="btn waves-effect waves-light" type="submit" name="action"
                <% if (availablePackages.length === 0) { %>
                        disabled
                        <% } %>
                >
                    <%= translate('PERK_SELECTION_SELECT') %>
                </button>
            </div>
        </div>
    </div>
</form>
