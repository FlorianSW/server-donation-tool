<%- include('partials/header.ejs') %>
<div class="container">
    <div class="row info">
        <div class="col s12">
            <h3>
                <%= translate('INFO_TITLE') %>
            </h3>
            <p>
                <%= translate('INFO_DESCRIPTION') %>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m3 l3">
            <div class="card steam">
                <div class="card-image">
                    <img src="/assets/images/steam.png">
                </div>
                <div class="card-content">
                    <span class="card-title"><%= translate('STEAM_ACCOUNT_TITLE') %></span>
                    <div class="status">
                        <%= user.steam.name %> (<%= user.steam.id %>)
                    </div>
                    <br>
                    <% if (user.steam.source === 'DISCORD') { %>
                        <p>
                            <%- translate('STEAM_FROM_DISCORD') %>
                        </p>
                    <% } else if (user.steam.source === 'STEAM') { %>
                        <p>
                            <%- translate('STEAM_FROM_STEAM') %>
                        </p>
                    <% } %>
                    <br>
                    <% if (supportsSteamLogin) { %>
                        <a href="/auth/steam/redirect">
                            <button class="waves-effect waves-light btn-small">
                                <%= translate('STEAM_LOGIN_ANOTHER') %>
                            </button>
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
        <% switch (step) {
        case "PACKAGE_SELECTION": %>
        <%- include('steps/package_selection.ejs'); %>
        <% break;
        case "DONATE": %>
        <%- include('steps/donate.ejs'); %>
        <% break;
        case "REDEEM": %>
        <%- include('steps/redeem.ejs'); %>
        <% break;
        } %>
    </div>
    <%- include('partials/perks_you_own.ejs'); %>
</div>
<%- include('partials/footer.ejs') %>
