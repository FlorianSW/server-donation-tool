<%- include('partials/header.ejs') %>
<div class="container">
    <div class="row info">
        <div class="col s12">
            <h3>
                <%= translate('INFO_TITLE') %>
            </h3>
            <p>
                <%= translate('INFO_DESCRIPTION') %>
            </p>
        </div>
    </div>
    <% if (step === 'PACKAGE_SELECTION') { %>
        <%- include('partials/donation_target.ejs') %>
    <% } %>
    <div class="row">
        <% if (step !== 'PACKAGE_SELECTION') { %>
            <div class="col s12 m3 l3">
                <%- include('partials/steam_info.ejs'); %>
            </div>
        <% } %>
        <% switch (step) {
        case "PACKAGE_SELECTION": %>
        <%- include('steps/package_selection.ejs'); %>
        <% break;
        case "DONATE": %>
        <%- include('steps/donate.ejs'); %>
        <% break;
        case "REDEEM": %>
        <%- include('steps/redeem.ejs'); %>
        <% break;
        } %>
    </div>
    <% if (step === 'PACKAGE_SELECTION') { %>
        <div class="row">
            <div class="col s12">
                <%- include('partials/perks_you_own.ejs'); %>
            </div>
        </div>
        <div class="row">
            <div class="col col s10 m4 offset-s1 offset-m2">
                <%- include('partials/steam_info.ejs'); %>
            </div>
            <div class="col col s10 m4">
                <%- include('partials/discord_info.ejs'); %>
            </div>
        </div>
    <% } %>
</div>
<%- include('partials/footer.ejs') %>
